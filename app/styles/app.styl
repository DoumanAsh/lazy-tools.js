index
    display: flex
    position: fixed
    top: 0
    left: 0
    right: 0
    bottom: 0

app
    flex: 1 1 80%
    text-align: center
    font-size: 2rem
    background: white
    z-index: -1
    background: #eaeaea

    & > header
        background: #333
        color: white
        & > h1
            display: inline-block
            margin-bottom: .5rem
            font-weight: bold

    & > main
        & > section
            display: inline-block
