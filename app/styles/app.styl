div.wrap
    display: flex
    position: fixed
    top: 0
    left: 0
    right: 0
    bottom: 0

app
    flex: 1 1 80%
    padding: .5rem
    text-align: center
    font-size: 2rem
    margin: 1rem

    & > header
        & > div
            display: inline-block
            text-align: left
            & > h1
                display: inline-block
                margin-bottom: .5rem
                font-weight: bold
                border-bottom: 1px solid #000
            & > p
                width: 500px
                color: #666
                word-wrap: break-word
        & > img
            display: inline-block

    & > main
        & > section
            display: inline-block
