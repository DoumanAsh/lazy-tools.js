div.nav
    color: #666
    background: #333
    text-align: center
    transition: width .2s
    box-sizing: border-box
    width: 100px

    & > a
        width: 100%
        display: block
        box-sizing: border-box
        padding: 1rem
        color: white
        text-decoration: none
        background: #444

        &.selected
            background: #5F8DA2

div.aru
    flex: 1 1 10%
    & > p
        font-size: 20px
        color: white
        width: 80%
        background: #333
        padding: .5rem
        text-align: center
        border-radius: 20px
